{% extends 'base.html.twig' %}

{% block title %}Connexion / Twitter{% endblock %}

{% block stylesheets %}
	{{parent()}}
    {{ encore_entry_link_tags("login") }}
{% endblock %}

{% block javascripts %}
	{{parent()}}
    {{ encore_entry_script_tags("login") }}
{% endblock %}

{% block body %}

<div class="d-flex">
    <section class="leftSide">
        <svg viewBox="0 0 24 24" aria-hidden="true" class="r-jwli3a r-4qtqp9 r-yyyyoo r-rxcuwo r-1777fci r-m327ed r-dnmrzs r-494qqr r-bnwqim r-1plcrui r-lrvibr"><g><path d="M23.643 4.937c-.835.37-1.732.62-2.675.733.962-.576 1.7-1.49 2.048-2.578-.9.534-1.897.922-2.958 1.13-.85-.904-2.06-1.47-3.4-1.47-2.572 0-4.658 2.086-4.658 4.66 0 .364.042.718.12 1.06-3.873-.195-7.304-2.05-9.602-4.868-.4.69-.63 1.49-.63 2.342 0 1.616.823 3.043 2.072 3.878-.764-.025-1.482-.234-2.11-.583v.06c0 2.257 1.605 4.14 3.737 4.568-.392.106-.803.162-1.227.162-.3 0-.593-.028-.877-.082.593 1.85 2.313 3.198 4.352 3.234-1.595 1.25-3.604 1.995-5.786 1.995-.376 0-.747-.022-1.112-.065 2.062 1.323 4.51 2.093 7.14 2.093 8.57 0 13.255-7.098 13.255-13.254 0-.2-.005-.402-.014-.602.91-.658 1.7-1.477 2.323-2.41z"></path></g></svg>
    </section>

    <section class="rightSide">
        
        <img src="../img/backgrounds/Twitter_bird.png" alt="Logo Twitter" class="logoTwitter">
        
        <h1 class="titleLogin">Ça se passe maintenant</h1>
        
        <h2 class="subTitleLogin">Connexion</h2>
        
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                </div>
            {% endif %}

            
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control my-2" autocomplete="email" required autofocus>
            <label for="inputPassword" class="pt-4">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control my-2" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}
            <div class="d-flex justify-content-around">
                <button class="btn btn-lg btn-dark mt-2 text-center" type="submit">
                Se connecter
                </button>
                <a href="{{path('app_registration')}}" class="btn btn-lg btn-dark mt-2 text-center">S'inscrire</a>
            </div>
           
        </form>

    </section>
</div>
{% endblock %}
